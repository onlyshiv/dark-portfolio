---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { ProjectProps } from "@types";

interface Props {
  projects: ProjectProps[];
}

const { projects } = Astro.props;
---

<Section text="Featured Projects" href="projects">
  {
    projects.map(({ name, summary, image, linkPreview, linkSource }, index) => {
      const top = 98 + index * 40;
      return (
        <div
          style={`top: ${top}px;`}
          class="sticky mb-12 rounded-2xl border border-neutral/20 bg-black"
        >
          <div class="bg-difu relative z-[1] grid h-[580px] w-full grid-rows-2 rounded-2xl bg-[#1c232d]/85 before:absolute before:inset-0 before:z-[-1] before:rounded-2xl before:bg-[url(/raja.png)] before:bg-[length:128px] before:bg-repeat before:opacity-[5%] before:content-[''] sm:grid-cols-2 sm:grid-rows-1 md:h-96">
            <div class="px-6 pt-12">
              <h3 class="mb-5 font-serif text-3xl font-medium text-primary">
                {name}
              </h3>
              <p class="text-base text-neutral">{summary}</p>
              <div class="flex gap-5 pt-10 text-white">
                <a
                  href={linkSource}
                  target="_blank"
                  class="after:relative after:bottom-[-5px] after:content-[url(/external.svg)] hover:underline"
                >
                  Source
                </a>
                <a
                  href={linkPreview}
                  target="_blank"
                  class="after:relative after:bottom-[-5px] after:content-[url(/external.svg)] hover:underline"
                >
                  Preview
                </a>
              </div>
            </div>
            <div class="flex items-center justify-center overflow-hidden">
            <Image
              class="h-full w-full rounded-ss-xl rounded-ee-2xl object-cover object-[40%_30%] sm:h-[85%] sm:w-full"
              src={image}
              alt={name}
              width="736"
              height="483"
            />
          </div>
          </div>
        </div>
      );
    })
  }
</Section>

<Section text="Resume" href="resume">
  <div class="flex flex-col items-center gap-6">
    <!-- Cropped Resume Preview -->
    <div class="w-full max-w-2xl overflow-hidden rounded-xl border border-neutral shadow-lg">
      <Image
        src="/shiv_resume_preview.jpg"
        alt="Shivshankar Sahoo Resume Preview"
        width="800"
        height="1131"
        class="object-cover object-top h-[400px] w-full"
      />
    </div>

    <!-- View Full Resume Button -->
    <a
      href="/shiv_resume.pdf"
      target="_blank"
      class="inline-block rounded-md border border-neutral px-5 py-2 text-sm font-medium text-white hover:border-primary hover:text-primary transition"
    >
      View Full Resume
    </a>
  </div>
</Section>


